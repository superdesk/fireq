#!/bin/sh
set -eu
root=$(dirname $(realpath -s $0))
cd $root
[ -d env ] || virtualenv -p /usr/bin/python3 env

if [ $(id -u) -ne 0 ]; then
    printf "### running with sudo...\n\n"
    sudo $0 "$@"
else
    set +u
    . env/bin/activate
    set -u
    pip show -q pystache || pip install pystache
    python -m fireq.cli "$@"
fi
